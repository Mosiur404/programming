{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++ build",
      "command": "g++",
      "type": "shell",
      "args": [
        "-g",
        "\"${file}\"",
        "-o",
        "\"${fileDirname}\\a.exe\"",
        "-std=c++2a"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$msCompile", "$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "close": true
      }
    }
  ]
}
